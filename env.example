# OMG Sushi POS Integration Environment Variables
# Copy this file to .env and fill in your actual values
#
# SCALABLE APPROACH:
# Each location has its own access token for security.
# Use the pattern: LOYVERSE_ACCESS_TOKEN_<LOCATION_ID>
# where <LOCATION_ID> is the location identifier (e.g., ARIAPITA, MUCURAPO)
#
# To add new locations, simply add new environment variables following this pattern.
# Use scripts/generate-pos-config.sh to help generate configuration for multiple locations.

# POS API Configuration
POS_API_URL=https://api.omgsushi.ttmenus.com

# Loyverse Configuration
LOYVERSE_WEBHOOK_SECRET=your_loyverse_webhook_secret_here

# Loyverse Store IDs (keep these secure)
LOYVERSE_STORE_ID_ARIAPITA=your_aripita_store_id_here
LOYVERSE_STORE_ID_MUCURAPO=your_mucurapo_store_id_here
LOYVERSE_STORE_ID_DIAMOND_VALE=your_diamond_vale_store_id_here

# Loyverse Access Tokens (one per location for security)
LOYVERSE_ACCESS_TOKEN_ARIAPITA=your_aripita_access_token_here
LOYVERSE_ACCESS_TOKEN_MUCURAPO=your_mucurapo_access_token_here
LOYVERSE_ACCESS_TOKEN_DIAMOND_VALE=your_diamond_vale_access_token_here

# Odoo Configuration - Location-Specific (one per location for complete isolation)
# Ariapita Location
ODOO_API_URL_ARIAPITA=https://aripita-odoo.yourdomain.com
ODOO_DATABASE_ARIAPITA=omgsushi_aripita
ODOO_COMPANY_ID_ARIAPITA=1
ODOO_PARTNER_ID_ARIAPITA=1
ODOO_POS_CONFIG_ID_ARIAPITA=1
ODOO_USER_ID_ARIAPITA=1

# Mucurapo Location
ODOO_API_URL_MUCURAPO=https://mucurapo-odoo.yourdomain.com
ODOO_DATABASE_MUCURAPO=omgsushi_mucurapo
ODOO_COMPANY_ID_MUCURAPO=1
ODOO_PARTNER_ID_MUCURAPO=1
ODOO_POS_CONFIG_ID_MUCURAPO=1
ODOO_USER_ID_MUCURAPO=1

# Diamond Vale Location
ODOO_API_URL_DIAMOND_VALE=https://diamondvale-odoo.yourdomain.com
ODOO_DATABASE_DIAMOND_VALE=omgsushi_diamond_vale
ODOO_COMPANY_ID_DIAMOND_VALE=1
ODOO_PARTNER_ID_DIAMOND_VALE=1
ODOO_POS_CONFIG_ID_DIAMOND_VALE=1
ODOO_USER_ID_DIAMOND_VALE=1

# Optional: Override default values
# These can be overridden in individual location configurations
DEFAULT_LOYVERSE_STORE_ID=TTMenus-OMGSushi-Default
DEFAULT_ODOO_COMPANY_ID=1

# Security
# Generate strong secrets for production
WEBHOOK_SECRET=your_webhook_secret_here
API_SECRET_KEY=your_api_secret_key_here

# Debug Settings
DEBUG=false
LOG_LEVEL=info
